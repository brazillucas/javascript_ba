 <div id="top-container" class="container-fluid">
        <h1 id="main-title" class="text-center">Encontre o emprego dos seus sonhos</h1>
        <p id="main-subtitle" class="text-center">Somos o site com mais vagas de tecnologia no mercado, direcionadas a home office</p>
        <form id="search-form" class="form-inline" action="/" method="GET">
            <div class="form-group col-md-10">
                <input type="text" class="form-control" id="job" name="job" placeholder="Digite a vaga que estÃ¡ buscando">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Procurar</button>
            </div>
        </form>
    </div>

    <main>
        <div id="job-container" class="container">
            <div class="row">
                <div class="col-md-12">
                    {{#if searh}}
                        <h2 id="job-list-title">Buscando vagas que contenham {{search}}</h2>
                    {{else}}
                        <h2 id="job-list-title">Veja nossas vagas em destaque</h2>
                    {{/if}}
                    <ul id="job-list" class="list-group">
                        {{#each empregos}}
                            <li class="list-group-item {{#if dataValues.novo }}new-job{{/if}}">
                                <img src="/img/company.svg" alt="Companhia">
                                <p>{{ dataValues.companhia }}</p>
                                <h2>{{ dataValues.titulo }}</h2>
                                <p>R${{ dataValues.salario }}</p>
                                <span class="new-job-label">Nova</span>
                                <a href="/empregos/view/{{dataValues.id}}" class="btn btn-primary">Ver Vaga</a>
                            </li>                        
                        {{/each}}
                        
                    </ul>
                </div>
            </div>
        </div>
    </main>